<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="store_logo">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="store_slogan_logo">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="buttons">
        <item name="android:background">@color/primaryDarkColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="login_edit">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>

</resources>
